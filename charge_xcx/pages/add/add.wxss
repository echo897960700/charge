.top{
  background-color: #fff;
  height: 50rpx;
  width: 100%;
  padding: 20rpx;
  font-size: 36rpx;
}

.left{
  width: 30%;
  float: left;
}

.left text{
  margin-left: 30rpx;
}
.input-content{
  width: 55%;
  display: block;
  float: right;  text-align: right;
  padding-right: 80rpx;
}




.input-content input{
    font-size: 32rpx;
}
.fenge {
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.fenge {
  justify-content: center;
  align-items: center;
  padding:10rpx;
}

.fenge .line {
  width: 40%;
  height: 1rpx;
  background-color: #dedede;
}

.fenge .text {
  margin: 0 20rpx;
  font-size: 26rpx;
  color: #999;
}

.cate{
    padding: 0rpx 40rpx;
    background-color: #fff;
}

.block{
    padding-top: 30rpx; 
    width: 20%;
    float: left;
}

.block span,.block text{
    text-align: center;
    display: block;
}


.block:hover span,.block:hover text{
    color: #1AAD19;
}

.picker{
  padding: 26rpx;
  background-color: #FFFFFF;
}
.picker text{
    width: 10%;
}
.beizhu{
    width: 88%;
    float: right;
    text-align: left;
}
.date-time{
    margin-top: 40rpx;
    border-bottom: 1rpx solid #ccc;
}
.time-setting{
    margin-left: 10rpx;
}
.form{
    background-color: red;
}
.btn-area{
    width: 90%;
    margin:30rpx auto;
}

.gaoliang{
  color: #1AAD19;
}