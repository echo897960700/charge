/**index.wxss**/
.main{
    box-sizing:padding-box;
    position: relative;
}
.icon-mini{
    font-size: 35rpx;
}
.choose-time{
    position: absolute;
    top: 80rpx;
    left: 80rpx;
    width: 60rpx;
    height: 60rpx;
    /*background-color: red;*/
}

.top{
    padding:40rpx 20rpx;
    text-align: center;
    background-color: #fff;
}
.sum{
    color:#1AAD19;
    font-size:46rpx;
    font-weight: bold;
    padding-top:10rpx; 
    padding-bottom: 15rpx;
}

.count{
    /*width: 100%;*/
    height: 100rpx;
    line-height: 40rpx;
}
.count text{
    line-height: 40rpx;
}
.count .title{
    font-size: 24rpx;
    color: #C0C0C0;
}
.button{
    margin: 0 auto;
    margin-top: 20rpx; 
}
.left{
    width: 42%;
    text-align: right;
    position: absolute;
    float: right;
}

.right{
    width: 48%;
    float: right;
    text-align: left;

}
.left text{
    /*width: 100%;*/
    display: block;
}
.right text{
    width: 100%;
    display: block;
    /*margin-left: 32rpx;*/
    box-sizing: border-box;
    padding-left: 32rpx;
}

.bottom-lists{
    width: 95%;
    margin-top: 30rpx;
}
.today{
    margin-top: 10rpx;
}
.row{
    width: 100%;
    display: block;
    padding: 19rpx;
    height: 40rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
    /*box-sizing: border-box;*/
}
.today-title{
    color: #C0C0C0;
    height: 30rpx;
    font-size: 24rpx;
}
.today-title-time{
    float: left;
}
.today-title-count{
    float: right;
}
.today-list{
    width: 100%;
}
.today-list-sum{
    float: right;
}
.beizhu{
    color: #C0C0C0;
}
.red{
    color: red;
}
